<Page x:Class="WpfApp1.Pages.RegTrade"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" 
      d:DesignWidth="800"
      Title="RegTrade" 
      Background="#FFE0E0E0">

    <Page.Resources>
        <Style x:Key="CustomButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10 5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="IsEnabled" Value="True"/>
            <Setter Property="IsTabStop" Value="True"/>
        </Style>

        <Style x:Key="TextBlockStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FF333333"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0 5"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#FF333333"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="0 5"/>
            <Setter Property="BorderBrush" Value="#FFCCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
        </Style>

        <Style x:Key="ComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#FF333333"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="0 5"/>
            <Setter Property="BorderBrush" Value="#FFCCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
        </Style>

        <Style x:Key="DatePickerStyle" TargetType="DatePicker">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#FF333333"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="0 5"/>
            <Setter Property="BorderBrush" Value="#FFCCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
        </Style>
    </Page.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <TextBlock Text="Оформление сделки" 
                   Grid.Row="0" 
                   Grid.ColumnSpan="2" 
                   FontSize="16" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,10" 
                   Style="{StaticResource TextBlockStyle}"/>

        <TextBlock Text="Риэлтор:" 
                   Grid.Row="1" 
                   Grid.Column="0" 
                   Style="{StaticResource TextBlockStyle}" 
                   Margin="0,0,10,0"/>
        <ComboBox x:Name="RealtorComboBox" 
                   Grid.Row="1" 
                   Grid.Column="1" 
                   Style="{StaticResource ComboBoxStyle}" 
                   Margin="0,0,0,10"/>

        <TextBlock Text="Тип недвижимости:" 
                   Grid.Row="2" 
                   Grid.Column="0" 
                   Style="{StaticResource TextBlockStyle}" 
                   Margin="0,0,10,0"/>
        <ComboBox x:Name="TypeComboBox" 
                   Grid.Row="2" 
                   Grid.Column="1" 
                   Style="{StaticResource ComboBoxStyle}" 
                   Margin="0,0,0,10" 
                   SelectionChanged="TypeComboBox_SelectionChanged">
            <ComboBoxItem Content="Квартира"/>
            <ComboBoxItem Content="Дом"/>
            <ComboBoxItem Content="Участок"/>
        </ComboBox>

        <TextBlock Text="Объект недвижимости:" 
                   Grid.Row="3" 
                   Grid.Column="0" 
                   Style="{StaticResource TextBlockStyle}" 
                   Margin="0,0,10,0"/>
        <ComboBox x:Name="PropertyComboBox" 
                   Grid.Row="3" 
                   Grid.Column="1" 
                   Style="{StaticResource ComboBoxStyle}" 
                   Margin="0,0,0,10"/>

        <TextBlock Text="Дата сделки:" 
                   Grid.Row="4" 
                   Grid.Column="0" 
                   Style="{StaticResource TextBlockStyle}" 
                   Margin="0,0,10,0"/>
        <DatePicker x:Name="DatePicker" 
                    Grid.Row="4" 
                    Grid.Column="1" 
                    Style="{StaticResource DatePickerStyle}" 
                    Margin="0,0,0,10"/>

        <TextBlock Text="Сумма сделки:" 
                   Grid.Row="5" 
                   Grid.Column="0" 
                   Style="{StaticResource TextBlockStyle}" 
                   Margin="0,0,10,0"/>
        <TextBox x:Name="AmountTextBox" 
                 Grid.Row="5" 
                 Grid.Column="1" 
                 Style="{StaticResource TextBoxStyle}" 
                 Margin="0,0,0,10" 
                 TextChanged="AmountTextBox_TextChanged" 
                 PreviewTextInput="Number_TextBox_PreviewTextInput"/>

        <Button x:Name="regBut" 
                Content="Оформить сделку" 
                Grid.Row="6" 
                Grid.ColumnSpan="2" 
                HorizontalAlignment="Center" 
                Padding="10,5" 
                Margin="0,10,0,0" 
                Click="regBut_Click" 
                Style="{StaticResource CustomButtonStyle}"/>

        <TextBlock x:Name="CommissionTextBlock" 
                   Grid.Row="7" 
                   Grid.ColumnSpan="2" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center" 
                   FontSize="14" 
                   Style="{StaticResource TextBlockStyle}"/>
    </Grid>
</Page>