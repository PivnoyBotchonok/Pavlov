<Page x:Class="WpfApp1.Pages.RegPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" 
      d:DesignWidth="800"
      Title="RegPage" 
      Background="#FFE0E0E0">

    <Page.Resources>
        <Style x:Key="CustomButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10 5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="IsEnabled" Value="True"/>
            <Setter Property="IsTabStop" Value="True"/>
        </Style>

        <Style x:Key="LabelStyle" TargetType="Label">
            <Setter Property="Foreground" Value="#FF333333"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0 5"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#FF333333"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="0 5"/>
            <Setter Property="BorderBrush" Value="#FFCCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
        </Style>

        <Style x:Key="ComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#FF333333"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="0 5"/>
            <Setter Property="BorderBrush" Value="#FFCCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
        </Style>
    </Page.Resources>

    <Grid>
        <Button x:Name="backBut" 
                Content="Назад" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Click="backBut_Click" 
                Style="{StaticResource CustomButtonStyle}"/>

        <StackPanel Orientation="Vertical" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center" 
                    Width="300">
            <Label Content="Фамилия" 
                   Style="{StaticResource LabelStyle}"/>
            <TextBox x:Name="SName_TextBox" 
                     Style="{StaticResource TextBoxStyle}" 
                     PreviewTextInput="LettersOnlyTextBox_PreviewTextInput" 
                     Text="{Binding SName}"/>

            <Label Content="Имя" 
                   Style="{StaticResource LabelStyle}"/>
            <TextBox x:Name="FName_TextBox" 
                     Style="{StaticResource TextBoxStyle}" 
                     PreviewTextInput="LettersOnlyTextBox_PreviewTextInput" 
                     Text="{Binding FName}"/>

            <Label Content="Отчество" 
                   Style="{StaticResource LabelStyle}"/>
            <TextBox x:Name="PName_TextBox" 
                     Style="{StaticResource TextBoxStyle}" 
                     PreviewTextInput="LettersOnlyTextBox_PreviewTextInput" 
                     Text="{Binding PName}"/>

            <Label Content="Логин" 
                   Style="{StaticResource LabelStyle}"/>
            <TextBox x:Name="Login_TextBox" 
                     Style="{StaticResource TextBoxStyle}" 
                     Text="{Binding Login}"/>

            <Label Content="Пароль" 
                   Style="{StaticResource LabelStyle}"/>
            <TextBox x:Name="Pass_TextBox" 
                     Style="{StaticResource TextBoxStyle}" 
                     Text="{Binding Password}"/>

            <ComboBox x:Name="CmbBox" 
                       Style="{StaticResource ComboBoxStyle}" 
                       SelectionChanged="CmbBox_SelectionChanged" 
                       SelectedItem="{Binding Role.ID}" 
                       DisplayMemberPath="{Binding Role.RoleName}"/>

            <StackPanel Orientation="Vertical" 
                        HorizontalAlignment="Stretch" 
                        x:Name="ClientPanel">
                <Label Content="Номер" 
                       Style="{StaticResource LabelStyle}"/>
                <TextBox x:Name="Number_TextBox" 
                         Style="{StaticResource TextBoxStyle}" 
                         MaxLength="11" 
                         PreviewTextInput="Number_TextBox_PreviewTextInput" 
                         Text="{Binding Number}"/>

                <Label Content="Email" 
                       Style="{StaticResource LabelStyle}"/>
                <TextBox x:Name="Email_TextBox" 
                         Style="{StaticResource TextBoxStyle}" 
                         Text="{Binding Emaill}"/>
            </StackPanel>

            <StackPanel Orientation="Vertical" 
                        HorizontalAlignment="Stretch" 
                        x:Name="RieltorPanel">
                <Label Content="Процент" 
                       Style="{StaticResource LabelStyle}"/>
                <TextBox x:Name="Part_TextBox" 
                         Style="{StaticResource TextBoxStyle}" 
                         PreviewTextInput="Number_TextBox_PreviewTextInput" 
                         Text="{Binding Part}"/>
            </StackPanel>

            <Button Content="Зарегистрироваться" 
                    x:Name="regBut" 
                    Click="regBut_Click" 
                    Style="{StaticResource CustomButtonStyle}" 
                    Margin="0 10"/>
        </StackPanel>
    </Grid>
</Page>